<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--button pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#fff3f3f3"
                android:endColor="#ffcecece"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_stroke_pressed"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>

    <!--button not pressed-->
    <item>
        <shape>
            <solid
                android:color="#fff3f3f3"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/black"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>

</selector>