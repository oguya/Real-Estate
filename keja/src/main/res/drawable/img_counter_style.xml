<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- state pressed-->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/counter_text_bg"/>
            <stroke
                android:width="2dp"
                android:color="@color/btn_stroke_pressed"/>
            <corners
                android:radius="3dp"/>
            <padding android:top="5dp"
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"/>
        </shape>
    </item>


    <!--normal state(not pressed)-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/counter_text_bg"/>
            <stroke
                android:width="1dp"
                android:color="#72a905"/>
            <corners
                android:radius="3dp"/>

            <padding android:top="5dp"
                android:left="5dp"
                android:bottom="5dp"
                android:right="5dp"/>
        </shape>
    </item>

</selector>