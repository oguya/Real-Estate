<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--button pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#ffb1ff05"
                android:endColor="#ffa8f505"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_stroke_pressed"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

    <!--button not pressed-->
    <item>
        <shape>
            <solid
                android:color="@color/search_list_background_pressed"/>
            <stroke
                android:width="1dp"
                android:color="@android:color/black"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>

</selector>